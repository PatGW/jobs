<h1>All Jobs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Position type</th>
    <th>Category</th>
    <th>Description</th>
    <th>How to apply</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.location %></td>
    <td><%= job.position_type %></td>
    <td><%= job.category %></td>
    <td><%= job.description %></td>
    <td><%= job.how_to_apply %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />



<% if current_user %>
        Logged in as <%= current_user.email %>      

        <%= link_to "New Job", new_job_path %>
    <% else %>
        <%= link_to "Join us to advertise a vacancy.", new_user_registration_path %>
    <% end %>
